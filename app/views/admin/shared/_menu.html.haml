%nav
  = link_to "TestGuru", root_path
  %ul
    - if user_signed_in?
      %li
        %span
          = "Welcome, #{current_user.email}"
        = link_to "Log Out", destroy_user_session_path, method: :delete
    - else
      %li
        = link_to "Register", new_user_registration_path
      %li
        = link_to "Log In", new_user_session_path(current_user)

