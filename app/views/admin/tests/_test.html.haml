%tr
  %td
    = test.id
  %td
    = content_tag :span, test.title, data: {test_id: test.id}, class: "test-title"
    = render "form_inline", test: test == @test ? @test : test
  %td
    = test.level
  %td
    = test.category.title
  %td
    = test.author.email
  %td
    = test.questions.length
  %td
    = link_to t(".show"), admin_test_questions_path(test), class: "btn btn-primary"
  %td
    = link_to t(".edit"), edit_admin_test_path(test),
                          data: {test_id: test.id},
                          class: "btn btn-primary form-inline-link"

