%tr
  %td
    = badge.id
  %td
    = image_tag "#{badge.badge_type.name}.png"
  %td
    = badge.name
  %td
    = badge.badge_type.name
  %td
    = link_to "Редактировать", edit_admin_badge_path(badge)
  %td
    = link_to "Удалить", admin_badge_path(badge), method: :delete, data: {confirm: "Вы Уверены?"}

